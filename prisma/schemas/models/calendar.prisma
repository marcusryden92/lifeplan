model SimpleEvent {
  id                               String   @id @default(cuid())
  title                            String
  start                            String
  end                              String
  duration                         Int?
  userId                           String
  rrule                            String?
  extendedProps_itemType           ItemType
  extendedProps_completedStartTime String?
  extendedProps_completedEndTime   String?
  extendedProps_parentId           String?
  backgroundColor                  String
  borderColor                      String
  createdAt                        String
  updatedAt                        String
  user                             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("SimpleEvents")
}

model Planner {
  id                 String   @id @default(uuid())
  title              String
  parentId           String?
  itemType           ItemType
  isReady            Boolean?
  duration           Int
  deadline           String?
  starts             String?
  dependency         String?
  completedStartTime String?
  completedEndTime   String?
  priority           Int
  userId             String
  color              String?
  createdAt          String
  updatedAt          String
  user               User     @relation(fields: [userId], references: [id])

  @@map("Planners")
}

model EventTemplate {
  id        String      @id @default(cuid())
  title     String
  startDay  WeekDayType
  startTime String
  userId    String
  duration  Int
  color     String?
  createdAt String
  updatedAt String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("EventTemplates")
}

enum WeekDayType {
  sunday
  monday
  tuesday
  wednesday
  thursday
  friday
  saturday
}

enum ItemType {
  task
  plan
  goal
  template
}
