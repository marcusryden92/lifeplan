model SimpleEvent {
  id             String   @id @default(cuid())
  title          String
  start          String
  end            String
  duration       Int?
  userId         String
  rrule          String?
  backgroundColor String
  borderColor    String
  createdAt      String
  updatedAt      String
  user           User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  extendedProps  EventExtendedProps?

  @@map("SimpleEvents")
}


model EventExtendedProps {
  id                   String   @id @default(cuid())
  itemType             ItemType
  completedStartTime   String?
  completedEndTime     String?
  parentId             String?
  eventId              String   @unique
  event                SimpleEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@map("EventExtendedProps")
}

model Planner {
  id                 String   @id @default(uuid())
  title              String
  parentId           String?
  itemType           ItemType
  isReady            Boolean?
  duration           Int
  deadline           String?
  starts             String?
  dependency         String?
  completedStartTime String?
  completedEndTime   String?
  priority           Int
  userId             String
  color              String?
  createdAt          String
  updatedAt          String
  user               User     @relation(fields: [userId], references: [id])

  @@map("Planners")
}

model EventTemplate {
  id        String      @id @default(cuid())
  title     String
  startDay  WeekDayType
  startTime String
  userId    String
  duration  Int
  color     String?
  createdAt String
  updatedAt String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("EventTemplates")
}

enum WeekDayType {
  sunday
  monday
  tuesday
  wednesday
  thursday
  friday
  saturday
}

enum ItemType {
  task
  plan
  goal
  template
}
