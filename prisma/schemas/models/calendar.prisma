model SimpleEvent {
  id                           String  @id @default(cuid())
  title                        String
  start                        String
  end                          String
  duration                     Int?
  userId                       String
  rrule                        String?
  extendedProps_isTemplateItem Boolean
  backgroundColor              String
  borderColor                  String
  user                         User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt String
  updatedAt String

  @@map("SimpleEvents")
}

model Planner {
  id                 String    @id @default(uuid())
  title              String
  parentId           String?
  type               PlanType?
  isReady            Boolean?
  duration           Int?
  deadline           String?
  starts             String?
  dependency         String?
  completedStartTime String?
  completedEndTime   String?
  userId             String
  color              String?
  user               User      @relation(fields: [userId], references: [id])

  createdAt String
  updatedAt String

  @@map("Planners")
}

model EventTemplate {
  id        String      @id @default(cuid())
  title     String
  startDay  WeekDayType
  startTime String
  userId    String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  duration  Int
  color     String?

  createdAt String
  updatedAt String

  @@map("EventTemplates")
}

enum WeekDayType {
  sunday
  monday
  tuesday
  wednesday
  thursday
  friday
  saturday
}

enum PlanType {
  task
  plan
  goal
}
